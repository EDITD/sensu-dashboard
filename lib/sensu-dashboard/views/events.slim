.form-stacked#other_info
  h4 Events Count
  ul#event_counts
    li
      span(class="label label-success") 0 total
    li
      span(class="label label-important") 0 critical
    li
      span(class="label label-warning") 0 unknown
    li
      span(class="label label-unknown") 0 warning

br(style='clear: both;')

#filter_unknown_container
  input#filter_unknown(type='checkbox' checked='checked')
  strong Filter Unknown Checks

input#events_filter(type="text")

.btn-group
  a.btn.btn-success#toggle-checkboxes(href='#')
    i.icon-check.icon-white
  a.btn.btn-success.dropdown-toggle(data-toggle='dropdown' href='#')
    span.caret
  ul.dropdown-menu
    li.dropdown-header Select
    li
      a#select-all(href='#')
        i.icon-check
        | &nbsp;All
    li
      a#select-none(href='#')
        i.icon-ban-circle
        | &nbsp;None
    li
      a#select-critical(href='#')
        i.icon-fire
        | &nbsp;Critical
    li
      a#select-unknown(href='#')
        i.icon-question-sign
        | &nbsp;Unknown
    li
      a#select-warning(href='#')
        i.icon-warning-sign
        | &nbsp;Warning
    li.divider
    li.dropdown-header Actions
    li
      a#resolve-selected(href='#')
        i.icon-ok-sign
        | &nbsp;Resolve
    li
      a#silence-selected(href='#')
        i.icon-volume-off
        | &nbsp;Silence
    li
      a#unsilence-selected(href='#')
        i.icon-volume-up
        | &nbsp;Unsilence

table.table.table-bordered.sensu-table#events
  thead
    tr
      th
      th Client
      th Check
      th Output
  tbody
    tr
      td
        img(src='/img/loading.gif' alt='loading...' title='loading...')

#event_modal.modal.fade(data-backdrop="true" data-keyboard="true" style="display: block")
  .modal-header
    a.close(href="#")
    h3 Event details
  .modal-body
    p Testing
  .modal-footer
    | Meow

script(type='text/template' id='tpl-event-count')
  li
    span(class="label label-success") <%= total %> total
  li
    span(class="label label-important") <%= critical %> critical
  li
    span(class="label label-warning") <%= unknown %> unknown
  li
    span(class="label label-unknown") <%= warning %> warning

script(type='text/template' id='tpl-event-column')
  th <%= display_name %>

script(type='text/template' id='tpl-event-list-item')
  td.select_col
    input(type='checkbox' name='<%= client %>')
  td.client_col(data-controls-modal="event_modal") <%= client %>
  td.check_col(data-controls-modal="event_modal") <%= check %>
  td.output_col(data-controls-modal="event_modal") <%= output %>
